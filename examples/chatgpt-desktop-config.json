{
  "mcpServers": {
    "web-scrape": {
      "url": "http://localhost:3000/sse",
      "name": "Web Content Scraper",
      "description": "Extract clean, cached web content with citations",
      "headers": {
        "User-Agent": "ChatGPT-Desktop/1.0 mcp-web-scrape-client"
      },
      "timeout": 30000,
      "retries": 3
    }
  },
  "environment": {
    "MCP_HTTP_PORT": "3000",
    "MCP_HTTP_HOST": "localhost",
    "MCP_RESPECT_ROBOTS": "true",
    "MCP_MAX_SIZE": "5242880",
    "MCP_TIMEOUT": "30000",
    "MCP_MAX_REQUESTS_PER_MINUTE": "30",
    "MCP_CACHE_TTL": "3600000",
    "MCP_MAX_CACHE_ENTRIES": "1000"
  }
}